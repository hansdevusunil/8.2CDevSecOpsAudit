pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        bat 'git clone https://github.com/hansdevusunil/8.2CDevSecOpsAudit.git'
      }
    }

    stage('Install Dependencies') {
      steps {
        bat 'cd 8.2CDevSecOpsAudit && npm install'
      }
    }

    stage('Run Tests') {
      steps {
        bat 'cd 8.2CDevSecOpsAudit && npm test || exit /b 0'
      }
    }

    stage('Generate Coverage Report') {
      steps {
        bat 'cd 8.2CDevSecOpsAudit && npm run coverage || exit /b 0'
      }
    }

    stage('NPM Audit (Security Scan)') {
      steps {
        bat 'cd 8.2CDevSecOpsAudit && npm audit || exit /b 0'
      }
    }
  }
}
